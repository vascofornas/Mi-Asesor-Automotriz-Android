<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#303741">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#0f142e"

        android:gravity="fill_horizontal|bottom">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeButton"
            android:src="@mipmap/home"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llamarButton"
            android:src="@mipmap/llamar"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailButton"
            android:src="@mipmap/email"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/citaButton"
            android:src="@mipmap/sms"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userButton"
            android:src="@mipmap/compartir"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp">


        <TextView
            android:id="@+id/titulo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="PREGUNTEME COSTO SERVICIO (3/3)"

            android:textStyle="bold"
            android:textColor="#f8d0d0"
            android:paddingLeft="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="18sp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtnombre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Su nombre"
                android:textStyle="bold"
                android:textColor="#f8d0d0"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione vehículo"
                android:textColor="#fffefe"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtemail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Su email"
                android:textStyle="bold"
                android:textColor="#f8d0d0"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione vehículo"
                android:textColor="#fffefe"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtcel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Su celular"
                android:textStyle="bold"
                android:textColor="#f8d0d0"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />

            <TextView
                android:id="@+id/tvCelular"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione vehículo"
                android:textColor="#fffefe"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txttel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Su teléfono"
                android:textStyle="bold"
                android:textColor="#f8d0d0"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />

            <TextView
                android:id="@+id/tvTel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione vehículo"
                android:textColor="#fffefe"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtVehiculo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Su vehículo"
                android:textStyle="bold"
                android:textColor="#f8d0d0"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />

            <TextView
                android:id="@+id/tvVehiculo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione vehículo"
                android:textColor="#fffefe"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtAno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Año de su vehículo"
                android:textStyle="bold"
                android:textColor="#f8d0d0"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />

            <TextView
                android:id="@+id/tvAno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione vehículo"
                android:textColor="#fffefe"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtKilometros"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Kilómetros aprox."
                android:textStyle="bold"
                android:textColor="#f8d0d0"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />

            <TextView
                android:id="@+id/tvKilometros"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione vehículo"
                android:textColor="#fffefe"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtComentarios"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sus comentarios"
                android:textStyle="bold"
                android:textColor="#f8d0d0"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top" />

            <EditText
                android:id="@+id/tvComentarios"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#fffefe"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left|top"
                android:textSize="15dp"
                android:textStyle="bold"
                android:minLines="2"
                android:maxLines="3"
                android:hint="Escriba aquí sus comentarios" />


        </LinearLayout>

        <Button
            android:id="@+id/seguir"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittel"
            android:text="@string/SeguirBtn"
            android:background="@android:color/darker_gray"
            android:alpha="0.8"
            android:textColor="#040404"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancelar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seguir"
            android:text="@string/CancelarBtn"
            android:background="@android:color/darker_gray"
            android:alpha="0.8"
            android:textColor="#9c0a0a"
            android:textStyle="bold"
            android:layout_marginTop="2dp" />


    </LinearLayout>

</RelativeLayout>
