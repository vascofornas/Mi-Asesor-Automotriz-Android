<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:gravity="bottom|center_horizontal"
    android:background="@drawable/fondoazul"
   >


    <TextView
        android:text="Hola !"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="24sp"
        />

    <TextView
        android:text="Bienvenid@ a Mi Asesor Automotriz."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_below="@+id/textView" />

    <TextView
    android:text="Tu Agencia es:"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textView4"
    android:layout_below="@+id/textView2"
    android:textSize="18sp"
    android:layout_marginTop="20dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/agenciaId"
        android:layout_below="@+id/textView4"
        android:textSize="14sp"
        android:textColor="@android:color/white" />

    <TextView
        android:text="Tu Asesor es:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/agenciaId"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/asesorId"
        android:layout_below="@+id/textView5"
        android:textSize="14sp"
        android:textColor="@android:color/white" />

    <Button
        android:text="ACEPTAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAceptar"
        android:layout_below="@+id/asesorId"


        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <Button
        android:text="SELECCIONAR OTRA AGENCIA Y/O ASESOR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSeleccionar"
        android:layout_below="@+id/buttonAceptar"
        android:textColor="@android:color/holo_red_dark" />

    />


</RelativeLayout>